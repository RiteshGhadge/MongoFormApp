<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-green-50 min-h-screen flex flex-col items-center py-10">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg p-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-blue-800">All Users</h1>
            <a href="/" class="bg-blue-100 text-blue-700 px-4 py-2 rounded-lg font-semibold shadow hover:bg-blue-200 transition text-sm">Go to Home</a>
        </div>
        <div class="flex flex-col gap-6">
            <% if(users.length >0){ %>
            
                 <% users.forEach(function(user){ %>
                <div class="flex items-center gap-6 bg-blue-50 rounded-lg p-4 shadow hover:shadow-lg transition">
                    <div>
                        <img src="<%= user.url %>" alt="User Image" class="w-16 h-16 rounded-full object-cover border-2 border-blue-300 shadow">
                    </div>
                    <div class="flex-1">
                        <h3 class="text-xl font-semibold text-blue-900"><%= user.name %></h3>
                        <h5 class="text-gray-600 mb-2"><%= user.email %></h5>
                        <div class="flex gap-3">
                            <a href="/edit/<%= user._id %>" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 transition text-sm font-medium shadow">Edit</a>
                            <a href="/delete/<%= user._id %>" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition text-sm font-medium shadow">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>

           <% } else { %>
            <div class="text-center text-gray-500">
                <p class="text-lg">No users found.</p>
            </div>
        
          <% } %>

        </div>
    </div>
</body>
</html>